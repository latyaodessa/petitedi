{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@petitedi/common/common-utils": [
        "libs/common/common-utils/src/index.ts"
      ],
      "@petitedi/editor/engine/feature-profile": [
        "libs/editor/engine/feature-profile/src/index.ts"
      ],
      "@petitedi/editor/engine/ui/forms": [
        "libs/editor/engine/ui/forms/src/index.ts"
      ],
      "@petitedi/forms-core": ["libs/forms-core/src/index.ts"],
      "@petitedi/petitedi-service/petite-interfaces": [
        "libs/petitedi-service/petite-interfaces/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
